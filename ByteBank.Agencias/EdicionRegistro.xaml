<Window x:Class="ByteBank.Agencias.EdicionRegistro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByteBank.Agencias"
        mc:Ignorable="d"
        Title="Edicion de Registro" Height="320" Width="320">
    <Canvas>
        <StackPanel Canvas.Top="15" Canvas.Left="15" Width="270">
            <TextBlock>Número</TextBlock>
            <local:ValidaTextBox x:Name="txtNumero"></local:ValidaTextBox>
            <TextBlock>Nombre</TextBlock>
            <local:ValidaTextBox x:Name="txtNombre"></local:ValidaTextBox>
            <TextBlock>Descripción</TextBlock>
            <local:ValidaTextBox x:Name="txtDescripcion"></local:ValidaTextBox>
            <TextBlock>Dirección</TextBlock>
            <local:ValidaTextBox x:Name="txtDireccion"></local:ValidaTextBox>
            <TextBlock>Teléfono</TextBlock>
            <local:ValidaTextBox x:Name="txtTelefono"></local:ValidaTextBox>
        </StackPanel>
        <StackPanel Canvas.Top="250" Canvas.Left="170" Orientation="Horizontal">
            <Button Content="Ok" Name="btnOk" Padding="5" Margin="15,0"></Button>
            <Button Content="Cancelar" Name="btnCancelar" Padding="5"></Button>
        </StackPanel>
    </Canvas>
</Window>
